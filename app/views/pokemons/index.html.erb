<h1>Pokedex</h1>

<%= form_with(url: pokemons_path, method: :get, local: true) do %>
  <div class="form-group">
    <%= label_tag :search, "Search Pokémon by Name" %>
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Enter Pokémon name" %>
  </div>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Pokedex</th>
      <th>Name</th>
      <th>Weight (kg)</th>
      <th>Legendary</th>
      <th>Generation</th>
      <th>Types</th>
      <th>Abilities</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.pokedex %></td>
        <td><%= link_to pokemon.name, pokemon_path(pokemon) %></td>
        <td><%= pokemon.weight_kg %></td>
        <td><%= pokemon.is_legendary ? 'Yes' : 'No' %></td>
        <td><%= pokemon.generation&.g_name %></td>
        <td><%= pokemon.types.map(&:name).join(', ') %></td>
        <td><%= pokemon.abilities.map(&:name).join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @pokemons %>
